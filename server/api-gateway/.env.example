# Musical Spork API Gateway Environment Configuration
# Copy this file to .env and configure for your environment

# Application Settings
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Security Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-here-minimum-32-characters-required
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/musical_spork
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# Service URLs
USER_SERVICE_URL=http://localhost:8001
AUTH_SERVICE_URL=http://localhost:8002
PAYMENT_SERVICE_URL=http://localhost:8003
NOTIFICATION_SERVICE_URL=http://localhost:8004

# External API Keys
STRIPE_API_KEY=sk_test_your_stripe_key_here
SENDGRID_API_KEY=SG.your_sendgrid_key_here
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=200

# Caching
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1000

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# CORS Settings
ALLOWED_HOSTS=localhost,127.0.0.1,*.musical-spork.com
